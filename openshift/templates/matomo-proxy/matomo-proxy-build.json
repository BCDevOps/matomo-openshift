{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-build-template",
    "labels": {
      "name": "${NAME}-build-template",
      "app": "${APP_NAME}"
    }
  },
  "objects": [
    {
      "kind": "NetworkSecurityPolicy",
      "apiVersion": "security.devops.gov.bc.ca/v1alpha1",
      "metadata": {
        "name": "${ENV_NAME}-pods-to-external-network",
        "labels": {
          "name": "pods-to-external-network",
          "env": "${ENV_NAME}",
          "app": "${APP_NAME}${SUFFIX}",
          "app-group": "${APP_GROUP}",
          "role": "${ROLE}"
        }
      },
      "spec": {
        "description": "Allow the builds to access the internet.\nThis only needs to be specified once per environment.\n",
        "source": [
          [
            "$namespace=${NAMESPACE_NAME}-${ENV_NAME}"
          ]
        ],
        "destination": [
          [
            "ext:network=any"
          ]
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "name": "${NAME}",
          "app": "${APP_NAME}"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "name": "${NAME}",
          "app": "${APP_NAME}"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "ref": "${GIT_REF}",
            "uri": "${GIT_REPO_URL}"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "dockerfilePath": "${DOCKER_FILE_PATH}",
            "from":{
              "kind":"DockerImage",
              "name":"${DOCKER_REG}nginx:stable"
            },
            "pullSecret":{
              "name":"${PULL_CREDS}"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:${OUTPUT_IMAGE_TAG}"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "matomo-proxy"
    },
    {
      "name": "APP_NAME",
      "displayName": "App Name",
      "description": "Used to group components together in the OpenShift console.",
      "required": true,
      "value": "matomo"
    },
    {
      "name": "ENV_NAME",
      "displayName": "Environment Name",
      "description": "Environment name.  For the build environment this will typically be 'tools'",
      "required": true,
      "value": "tools"
    },
    {
      "name": "ROLE",
      "displayName": "Role",
      "description": "The role of this service within the application - used for Network Policies",
      "required": true,
      "value": "proxy"
    },
    {
      "name": "SUFFIX",
      "displayName": "Suffix",
      "description": "A suffix applied to all of the objects in this template.",
      "required": false,
      "value": ""
    },
    {
      "name": "APP_GROUP",
      "displayName": "App Group",
      "description": "The name assigned to all of the deployments in this project.",
      "required": true,
      "value": "matomo-proxy"
    },
    {
      "name": "NAMESPACE_NAME",
      "displayName": "NameSpace name",
      "description": "name of the project namespace",
      "required": true,
      "value": "myproject"
    },
    {
      "name": "DOCKER_REG",
      "displayName": "Docker-Registry",
      "description": "The name of the docker server",
      "required": false,
      "value": "docker-remote.artifacts.developer.gov.bc.ca/"
    },
    {
      "name": "PULL_CREDS",
      "displayName": "Pull-Credentials",
      "description": "The name of the secret that will be used to pull from a docker server",
      "required": false,
      "value": "artifactory-creds"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo.",
      "required": true,
      "value": "https://github.com/bcdevops/matomo-openshift.git"
    },
    {
      "name": "GIT_REF",
      "displayName": "Git Reference",
      "description": "The git reference or branch.",
      "required": true,
      "value": "master"
    },
    {
      "name": "OUTPUT_IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "DOCKER_FILE_PATH",
      "displayName": "Docker File Path",
      "description": "The path to the docker file.",
      "required": true,
      "value": "docker/nginx/Dockerfile"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "Resources CPU Limit",
      "description": "The resources CPU limit (in cores) for this build.",
      "required": true,
      "value": "0"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Resources Memory Limit",
      "description": "The resources Memory limit (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "0Mi"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "Resources CPU Request",
      "description": "The resources CPU request (in cores) for this build.",
      "required": true,
      "value": "0"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Resources Memory Request",
      "description": "The resources Memory request (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "0Mi"
    }
  ]
}